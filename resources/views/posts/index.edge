<!-- body -->

<body>
  <div class="flex-container">
    <header class="main-header">
      <div class="wrapper">
        <div class="header-flex">
          <div class="menu-icon-container">
            <span class="menu-icon"><i class="fa fa-bars" aria-hidden="true"></i></span>
          </div>
          <nav class="main-nav">
            <span class="menu-icon-close"><i class="fa fa-times" aria-hidden="true"></i></span>
            <ul>
              <li style="color: white"><a href=""></a>Blogs</li>
              <li style="color: white"><a href=""></a>About</li>
            </ul>
          </nav>
          <p class="logo"><a href="">MY BLOG</a></p>

          <div class="search-icon-container">
            <span class="search-icon"><a><i class="fa fa-search" aria-hidden="true"></i></a></span>
          </div>
        </div>
      </div>
    </header>
    <!-- header end -->

    <div class="content wrapper">
      <!-- <ol class="post-card-box clearfix">

        @each(post in posts)

        <li>
          <div class="post-card">
            <a href="/posts/{{post._id}}" class="post-card-image" style="background-image:  url( {{post.image}} )">
            </a>

            <div class="post-card-body">
              <a href="" class="tag"> |&#32;Blog</a>
              <a href="" class="tag"> | </a>
              <a href="/posts/{{post._id}}" class="post-card-link">
                <h3 class="post-card-title">{{post.title}}</h3>
              </a>
            </div>
          </div>
        </li>

        @endeach

      </ol> -->

      <div class="search-box">
        <div class="wrapper">
          <div class="search-grid">
            <form action="" class="search-form">
              <div id="search-container">
                <input type="text" id="search-input" class="search" placeholder="Search">
              </div>
            </form>
            <ul id="results-container" class="results-search"></ul>
            <div class="icon-close-container">
              <span class="search-icon-close"><i class="fa fa-times" aria-hidden="true"></i></span>
            </div>
          </div>
        </div>
      </div>

      <div class="pagination clearfix"></div>


    </div>
    <!-- wrapper end -->

    <!-- content -->
    <main class="page-content" aria-label="Content">
      <section class="chapters cf">
        <div class="wrapper flex-row" style="width: 1640px;max-width:90%;margin: 0 auto;">
          @each(post in posts)
          <div class="chapter">

            <a href="/posts/{{post._id}}">
              <img src="{{post.image}}"alt="{{post.title}}">
            </a>

            <a href="/posts/{{post._id}}">
              <div class="chapter_inner">
                <h3 class="chapter_title">{{post.title}}</h3>
                <p class="chapter_number">{{post.created_at}}</p>
              </div>
            </a>
          </div>
          @endeach
        </div>
      </section>
    </main>


    <!-- footer -->
    <footer class="main-footer">
      <div class="">
        <ul class="social_footer">
          <li><a href="https://github.com/shuweiliu" target="_blank"><i class="fa fa-github" aria-hidden="true"></i></a>
          </li>

          <li><a href="#" target="_blank"><i class="fa fa-linkedin" aria-hidden="true"></i></a></li>

          <li><a href="#" target="_blank"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>

          <li><a href="#" target="_blank"><i class="fa fa-pinterest" aria-hidden="true"></i></a></li>

          <li><a href="#" target="_blank"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
        </ul>


        <div class="copyright">
          <p style="color:black" >&copy; 2019 | <a href="https://sw.midoti.site" target="_blank">Shuwei</a></p>
        </div>
      </div>
    </footer>
    <!-- footer end -->

  </div>

  <!-- javascript -->
  <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
  <script src="http://artemsheludko.com/adam-blog/assets/js/main.js"></script>

  <script>
    SimpleJekyllSearch({
      searchInput: document.getElementById('search-input'),
      resultsContainer: document.getElementById('results-container'),
      json: '/adam-blog/search.json',
      searchResultTemplate: '<li><a href="{url}" title="{desc}">{title}</a></li>',
      noResultsText: 'No results found',
      fuzzy: false,
      exclude: ['Welcome']
    });
  </script>

